<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:ShowStopper.CustomComponents"
             x:Class="ShowStopper.CustomComponents.RoundedImage"
             x:Name="This"
             x:DataType="customControls:RoundedImage">
    <ContentView.Content>
        <Border
            StrokeShape="RoundRectangle 80,80,80,80"
            HeightRequest="150"
            WidthRequest="150"
>
            <Image
                Aspect="AspectFit"
                Source="{Binding Source={x:Reference This}, Path=ImageSource}">

            </Image>
        </Border>
            
    </ContentView.Content>
</ContentView>