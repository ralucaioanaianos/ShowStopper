<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:ShowStopper.CustomComponents"
             x:Class="ShowStopper.CustomComponents.RoundedImage"
             x:Name="This"
             x:DataType="customControls:RoundedImage">
    <ContentView.Content>
        
            <Image
                Source="{Binding Source={x:Reference This}, Path=ImageSource}">
                <Image.Clip>
                    <EllipseGeometry RadiusX="{Binding Source={x:Reference This}, Path=RadiusX}"
                                     RadiusY="{Binding Source={x:Reference This}, Path=RadiusY}"
                                     Center="180,180"></EllipseGeometry>
                </Image.Clip>
            </Image>
    </ContentView.Content>
</ContentView>