<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShowStopper.PaymentPage"
             Title="PaymentPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Total Amount" />
            <Entry Text="{Binding TotalAmount}" Placeholder="Enter total amount" />

            <Button Text="Start Payment" Command="{Binding StartPaymentCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>