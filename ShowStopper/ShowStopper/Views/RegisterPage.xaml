<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:ShowStopper.CustomComponents"
             x:Class="ShowStopper.RegisterPage"
             Title="RegisterPage"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <customControls:CustomNavigationBar
            Grid.Row="0"
            GradientColor1="#1A2C6C"
            GradientColor2="#A782B9"
            IsBackButtonVisible="True"
            IsPlusButtonVisible="False"
            IsEmptyHeartButtonVisible="False"
            BackBtnTapCommand="{Binding BackBtn}"
            PlusBtnTapCommand="{Binding PlusBtn}"
            PageName="Register">
        </customControls:CustomNavigationBar>
        <ScrollView Grid.Row="1">
            <StackLayout Margin="20">
                <Label Text="Email address:"
                           FontAttributes="Bold"
                           Margin="5,0,0,0"
                           TextColor="DarkGray"></Label>
                <Entry Text="{Binding Email}"></Entry>
<!--email pass first name last name phone company-->
                <Label Text="Password:"
                           FontAttributes="Bold"
                           Margin="5,0,0,0"
                           TextColor="DarkGray"></Label>
                <Entry Text="{Binding Password}"></Entry>
                <Label Text="First name:"
                           FontAttributes="Bold"
                           Margin="5,0,0,0"
                           TextColor="DarkGray"></Label>
                <Entry Text="{Binding FirstName}"></Entry>
                <Label Text="Last name:"
                           FontAttributes="Bold"
                           Margin="5,0,0,0"
                           TextColor="DarkGray"></Label>
                <Entry Text="{Binding LastName}"></Entry>
                <Label Text="Phone number:"
                           FontAttributes="Bold"
                           Margin="5,0,0,0"
                           TextColor="DarkGray"></Label>
                <Entry Text="{Binding PhoneNumber}"></Entry>
                <Label Text="Company name:"
                           FontAttributes="Bold"
                           Margin="5,0,0,0"
                           TextColor="DarkGray"></Label>
                <Entry Text="{Binding CompanyName}"></Entry>
                <HorizontalStackLayout HorizontalOptions="Center"
                                           Margin="0,20,0,0">
                    <ImageButton Source="second_camera.png"
                                 Command="{Binding SelectPhoto}"
                                 HeightRequest="40"></ImageButton>
                    <Label Text="Pick Photo"
                               Margin="0,10,0,0"
                               TextColor="#805B93"
                               FontAttributes="Bold"
                               FontSize="15"></Label>
                </HorizontalStackLayout>

                <customControls:GradientFilledButton GradientColor1="#1A2C6C"
                                                 GradientColor2="#A782B9"
                                                 TextColor="White"
                                                 BorderColor="Transparent"
                                                 TapCommand="{Binding RegisterUser}"
                                                 Text="Add"
                                                 VerticalOptions="End"
                                                 Margin="0,20,0,20">

                </customControls:GradientFilledButton>
            </StackLayout>
        </ScrollView>
