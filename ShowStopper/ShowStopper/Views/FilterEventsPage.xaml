<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:ShowStopper.CustomComponents"
             x:Class="ShowStopper.Views.FilterEventsPage"
             Title="FilterEventsPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView VerticalOptions="FillAndExpand">

            <VerticalStackLayout>
                <ImageButton Source="x_icon.png"
                         HorizontalOptions="End"
                         Margin="0,20,20,0"
                         HeightRequest="30"
                         InputTransparent="True"
                         Command="{Binding ExitBtn}"></ImageButton>
                <Label Text="Sort and Filter"
                   FontSize="30"
                   Margin="20,0,0,0"
                   FontAttributes="Bold"
                   TextColor="#1A2C6C"></Label>
                <StackLayout >
                    <Label Text="Date Period"
                           Margin="20,20,0,0"
                           FontSize="20"
                           ></Label>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <VerticalStackLayout Grid.Column="0" Margin="20,0,0,0">
                            <Label Text="From"
                                   Margin="0,20,0,0"
                                   FontSize="17"></Label>
                            <DatePicker Date="{Binding FromTime}"
                                        MinimumDate="{Binding FromTime}"></DatePicker>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Margin="0,0,20,0">
                            <Label Text="To"
                                   Margin="0,20,0,0"
                                   FontSize="17"></Label>
                            <DatePicker Date="{Binding ToTime}"></DatePicker>
                        </VerticalStackLayout>
                    </Grid>
                </StackLayout>
                <StackLayout Margin="20,20,20,0">
                    <Label Text="Price range (in lei)"
                               FontSize="20"></Label>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Entry Grid.Column="0"
                                   Placeholder="From"
                                   Margin="0,0,0,0"
                                   Keyboard="Numeric"
                                   Text="{Binding FromPrice}"></Entry>
                        <Entry Grid.Column="1"
                                   Placeholder="To"
                                   Margin="0,0,0,0"
                                   Keyboard="Numeric"
                               Text="{Binding ToPrice}"></Entry>
                    </Grid>
                </StackLayout>
                

