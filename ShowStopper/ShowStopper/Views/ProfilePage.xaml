<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customControls="clr-namespace:ShowStopper.CustomComponents"
             x:Class="ShowStopper.Views.ProfilePage"
             Title="My Profile"
             NavigationPage.HasNavigationBar="True">
    <ContentPage.Content>
        <StackLayout>
            <customControls:RoundedImage
                Margin="0,20,0,0"
                ImageSource="cat_user.jpg"></customControls:RoundedImage>
            <Label Text="Firstname Lastname"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,0"></Label>
            <Label Text="Account"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="20,30,0,0"></Label>
            <HorizontalStackLayout>
                
            </HorizontalStackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>